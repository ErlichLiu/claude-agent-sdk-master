# pnpm configuration for Next.js tutorial project

# Hoist all dependencies to the root node_modules (helps with Next.js compatibility)
shamefully-hoist=true

# Automatically install peer dependencies
auto-install-peers=true

# Don't fail on peer dependency warnings (better for tutorial environment)
strict-peer-dependencies=false

# Use the node_modules linker (more compatible with Next.js)
node-linker=hoisted

# Save exact versions (recommended for tutorials to ensure consistency)
save-exact=true

# Faster installation by skipping optional dependencies when not needed
# optional=false
